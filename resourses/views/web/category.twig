{% extends 'web/layouts/app.twig' %} 

{% block title %}{{category}} | {{company}}{% endblock %} 

{% block content %}
<!-- Body Start -->
	 <div class="wrapper">
		 <div class="gambo-Breadcrumb">
			 <div class="container">
				 <div class="row">
					 <div class="col-md-12">
						 <nav aria-label="breadcrumb">
							 <ol class="breadcrumb">
								 <li class="breadcrumb-item"><a href="{{base_url()}}/">Home </a></li>
								 <li class="breadcrumb-item active" aria-current="page">{{items.category}}</li>
							 </ol>
						 </nav>
					 </div>
				 </div>
			 </div>
		 </div>
		 <div class="all-product-grid">
			 <div class="container">
				 <div class="row">
					 <div class="col-lg-12">
						 <div class="product-top-dt">
							 <div class="product-left-title">
								 <h2> {{category}} </h2>
							 </div>
							 <a href="#" class="filter-btn pull-bs-canvas-right">Filters </a>
							 <div class="product-sort">
								 <div class="ui selection dropdown vchrt-dropdown">
									 <input name="gender" type="hidden" value="default" />
									 <i class="dropdown icon d-icon"></i>
									 <div class="text">Popularity </div>
									 <div class="menu">
										 <div class="item" data-value="0">Popularity </div>
										 <div class="item" data-value="1">Price - Low to ____ </div>
										 <div class="item" data-value="2">Price - High to ___ </div>
										 <div class="item" data-value="3">Alphabetical </div>
										 <div class="item" data-value="4">Saving - High to ___ </div>
										 <div class="item" data-value="5">Saving - Low to ____ </div>
										 <div class="item" data-value="6">% Off - High __ Low </div>
									 </div>
								 </div>
							 </div>
						 </div>
					 </div>
				 </div>
				 <div class="product-list-view">
					 <div class="row">

						{% for item in items %}
						 <div class="col-lg-3 col-md-6">
							 <div class="product-item mb-30">
							 			   <input type="hidden" value="{{item.id}}" class="user_id">
								 <a href="{{base_url()}}/pd/{{item.id}}/{{item.name | replace({" ":"-"}) }}" class="product-img">
									 <img src="https://gobasket.co.za/c/admin/itemimg/{{item.image}}" alt="{{item.name}}" title="{{item.name}}"/>
									 <div class="product-absolute-options">
										 <span class="offer-badge-1">{{(((item.mrp - item.price)/item.mrp)*100) | round }}% OFF</span>
										 <button   style="background: none;  padding: 0px;  border: none;" class="add-btn-wishlist"><span class="like-icon" title="wishlist"></span></button>
									 </div>
								 </a>
								 <div class="product-text-dt">
									 <p>Available <span>(In Stock) </span></p>
									 <h4>{{item.name | length > 15 ? item.name |slice(0, 25) ~ '...' : item.name}}</h4>
									 <div class="product-qty">{{item.quantity}}{{item.quantitytype}}</div> <div class="product-price">{{currency}}{{item.price}}  <span> {{currency}}{{item.mrp }} </span></div>
									 <div class="qty-cart">
                                 			<div class="quantity buttons_added UPDATE{{item.id}}">
												 <input type="button" value="-" class="minus minus-btn" onclick="changeProductQty('{{item.id}}','-1')"/>
												 <input type="number" step="1" name="quantity" value="1" class="input-text qty text" />
												 <input type="button" value="+" class="plus plus-btn" onclick="changeProductQty('{{item.id}}','+1')"/>
											 </div>
                                 			<button class="cart-btn ADD{{item.id}}" onclick="addToCart('{{item.id}}','{{item.name}}','{{item.price}}','{{item.mrp}}','{{item.quantity}}','{{item.quantitytype}}','{{item.image}}')">Add To Cart <i class="uil uil-shopping-cart-alt"></i></button>
									 </div>
								 </div>
							 </div>
						 </div>
						{% endfor %}

						 
						 
						 <div class="col-md-12">
							 <div class="more-product-btn">
								 <button class="show-more-btn hover-btn" onclick="window.location.href = '#';">Show More </button>
							 </div>
						 </div>
					 </div>
				 </div>
			 </div>
		 </div>
	 </div>
	 <!-- Body End -->

{% endblock %}