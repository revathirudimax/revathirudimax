{% extends 'web/layouts/app.twig' %} 

{% block title %}Grocery | {{company}} {% endblock %} 

{% block content %}
	 <!-- Body Start -->
	 <div class="wrapper">
		 <div class="gambo-Breadcrumb">
			 <div class="container">
				 <div class="row">
					 <div class="col-md-12">
						 <nav aria-label="breadcrumb">
							 <ol class="breadcrumb">
								 <li class="breadcrumb-item"><a href="{{base_url()}}">Home </a></li>
								 <li class="breadcrumb-item active" aria-current="page">My Orders </li>
							 </ol>
						 </nav>
					 </div>
				 </div>
			 </div>
		 </div>
		 <div class="dashboard-group">
			 <div class="container">
				 <div class="row">
					 <div class="col-lg-12">
						 <div class="user-dt">
							 <h4>MY ORDERS</h4>
						 </div>
					 </div>
				 </div>
			 </div>
		 </div>	
		 <div class="">
			 <div class="container">
				 <div class="row">
					<div class="col-lg-12 col-md-12">

					{% for order in orders %}
						<div class="pdpt-bg">
							<div class="pdpt-title clearfix">
								<h6 class="float-left"><b>Order Timing -</b> {{order.ordertime | date}} </h6> <h6 class="float-right"><b>Delivery Timing -</b> {{order.dtype}} </h6>
							</div> 
							<div class="order-body10">
								<ul class="order-dtsll">
									<li>
										<div class="order-dt-img">
											<img src="{{base_url()}}/images/groceries.svg" alt="" />
										</div>
									</li>
									<li>
										<div class="order-dt47">
											<h4>Order ID : {{order.orderid}}</h4>
											<p>Status : {{order.status}}</p>
											<p>Payment Method : {{order.paymenttype}}</p>
										</div>
									</li>
								</ul>
								<div class="total-dt">
									<div class="total-checkout-group">
										<div class="cart-total-dil pt-3">
											<h4>Delivery Charges </h4>
											<span>{{currency}}{{order.shipping}}</span>
										</div>
									</div>
									<div class="main-total-cart">
										<h2>Total </h2>
										<span>{{currency}}{{order.total}}</span>
									</div>
								</div>

								<div class="call-bill">
									<div class="order-bill-slip">
										<a href="{{base_url()}}/u/invoice/{{order.orderid}}" class="bill-btn5 hover-btn">View Bill </a>
									</div>
								</div>
							</div>
						</div>

					{% endfor %}
					</div>								
				</div>
			 </div>	
		 </div>	
	 </div>
	 <!-- Body End -->

{% endblock %}