<!-- Search Model Start-->
	 <div id="search_model" class="header-cate-model main-gambo-model modal fade" tabindex="-1" role="dialog" aria-modal="false">
         <div class="modal-dialog search-ground-area" role="document">
             <div class="category-area-inner">
                 <div class="modal-header">
                     <button type="button" class="close btn-close" data-dismiss="modal" aria-label="Close">
						 <i class="uil uil-multiply"></i>
                     </button>
                 </div>
                 <div class="category-model-content modal-content"> 
					 <div class="search-header">
						 	<form action="{{base_url()}}/search" method="GET">
								<div class="ui search">
									<div class="ui left icon input swdh10 float-left">
											<input class="prompt srch10" type="text" name="query" placeholder="Search for products.." />
											<i class='uil uil-search-alt icon icon1'></i>
											
									</div>
									<div class="float-right">
										<button type="submit" class="btn-search text-dark">Search</button>
									</div>
								</div>
								
							</form>
					 </div>
                 </div>
             </div>
         </div>
     </div>
	 <!-- Search Model End-->



	 <div id="category_model" class="header-cate-model main-gambo-model modal fade" tabindex="-1" role="dialog" aria-modal="false">
         <div class="modal-dialog category-area" role="document">
             <div class="category-area-inner">
                 <div class="modal-header">
                     <button type="button" class="close btn-close" data-dismiss="modal" aria-label="Close">
						 <i class="uil uil-multiply"></i>
                     </button>
                 </div>
                 <div class="category-model-content modal-content"> 
					 <div class="cate-header">
						 <h4>Select Category </h4>
					 </div>
                     <ul class="category-by-cat">

                   {% for cat in category %}  
						 <li>
							 <a href="{{base_url()}}/category/{{cat.categry}}" class="single-cat-item">
								 <div class="icon">
									 <img src="{{base_url()}}/images/category/{{cat.cateimg}}" alt="{{cat.categry}}" />
								 </div>
								 <div class="text"> {{cat.categry}} </div>
							 </a>
						 </li>
					{% endfor %}

                     </ul>
                 </div>
             </div>
         </div>
     </div>



    
	 <!-- Cart Sidebar Offset Start-->
	 <div class="bs-canvas bs-canvas-left position-fixed bg-cart h-100">
		 <div class="bs-canvas-header side-cart-header p-3 ">
			 <div class="d-inline-block  main-cart-title">My Cart ( <span></span> )</div>
			 <button type="button" class="bs-canvas-close close" aria-label="Close"><i class="uil uil-multiply"></i></button>
		 </div> 
		 <div class="bs-canvas-body">
		  	<div class="cart-top-total">
				 <div id="scurite-cost" class="cart-total-dil">
					 <h4>Sub Total </h4>
					 <span>{{currency}} <strong></strong></span>
				 </div>
				 <div id="scurite-dcost" class="cart-total-dil pt-2">
					 <h4>Delivery Charges </h4>
					 <span>{{currency}} <strong></strong></span>
				 </div>
			 </div>

			 <div class="side-cart-items">

				 
			 </div>
		 </div>
		 <div class="bs-canvas-footer">
		
			 <div id="scurite-saving" class="cart-total-dil saving-total ">
				 <h4>Total Saving </h4>
				 <span>{{currency}} <strong></strong></span>
			 </div>

			 
			 <div id="scurite-total" class="main-total-cart">
				 <h2>Total </h2>
				 <span>{{currency}} <strong></strong></span>
			 </div>
			 <form class="checkout-cart" method="post" action="{{base_url()}}/u/checkout" onSubmit="return setcart();">
				 <a href="#" class="promo-code">Have a promocode? </a>
				 <input name="cart-items-input" id="cart-items-input" type="hidden" value=''/>
				 <input id="cart-checkout-btn" type="submit" onclick="setcart()" class="cart-checkout-btn hover-btn" value="Proceed to Checkout">
			 </form>
		 </div>
	 </div>
	 <!-- Cart Sidebar Offsetl End-->
